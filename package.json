{
  "name": "chan4077.github.io",
  "description": "Material2 version of https://chan4077.github.io",
  "version": "1.0.0",
  "bugs": "https://github.com/Chan4077/chan4077.github.io/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chan4077/chan4077.github.io"
  },
  "license": "MIT",
  "scripts": {
    "start": "ng serve",
    "lint": "tslint \"src/**/*.ts\" --project src/tsconfig.json --type-check && tslint \"e2e/**/*.ts\" --project e2e/tsconfig.json --type-check",
    "test": "ng test",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "firebaseDeploy": "ng build --base-href \"https://githubpageschan4077.firebaseapp.com\" -sm -ec && firebase deploy",
    "githubPagesDeploy": "ng build -sm -ec -bh / && ngh --branch=master",
    "checkNewDeps": "ncu -u",
    "updateDeps": "npm update",
    "forceUpdateDeps": "ncu -a && npm install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.3",
    "@angular/common": "^4.0.3",
    "@angular/compiler": "^4.0.3",
    "@angular/compiler-cli": "^4.0.3",
    "@angular/core": "^4.0.3",
    "@angular/flex-layout": "^2.0.0-beta.8",
    "@angular/forms": "^4.0.3",
    "@angular/http": "^4.0.3",
    "@angular/material": "git+https://github.com/angular/material2-builds.git",
    "@angular/platform-browser": "^4.0.3",
    "@angular/platform-browser-dynamic": "^4.0.3",
    "@angular/platform-server": "^4.0.3",
    "@angular/router": "^4.0.3",
    "angular2-highlight-js": "^5.0.0",
    "angular2-markdown": "^1.5.2",
    "core-js": "^2.4.1",
    "firebase": "^3.8.0",
    "hammerjs": "^2.0.8",
    "rxjs": "^5.3.0",
    "ts-helpers": "^1.1.2",
    "typescript": "^2.2.2",
    "typings": "^2.1.1",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@angular/cli": "^1.0.0",
    "@angular/compiler-cli": "^4.0.2",
    "@types/hammerjs": "^2.0.34",
    "@types/jasmine": "2.5.47",
    "@types/node": "^7.0.13",
    "codelyzer": "~3.0.0-beta.4",
    "gh-pages": "^0.12.0",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "4.0.0",
    "karma": "1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-remap-istanbul": "^0.6.0",
    "protractor": "~5.1.1",
    "ts-node": "3.0.2",
    "tslint": "^5.1.0"
  }
